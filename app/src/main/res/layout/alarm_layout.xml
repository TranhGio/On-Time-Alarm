<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alarmset_textView"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="46dp"
        android:text="Alarms Set"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp" />

    <RelativeLayout
        android:id="@+id/alarm_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:background="@drawable/background_box">

        <TextView
            android:id="@+id/alarm_textView"
            android:layout_width="172dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text=" "
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:gravity="start" />

        <Switch
            android:id="@+id/alarm_switch"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="70dp"
            android:checked="true"
            android:visibility="invisible"
            tools:checked="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/off_button"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/snooze_button"
        android:layout_toEndOf="@+id/alarmset_textView"
        android:background="@drawable/oval_shape"
        android:fontFamily="sans-serif"
        android:onClick="alarmToggleOff"
        android:text="Turn off alarm"
        android:layout_toRightOf="@+id/alarmset_textView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/alarm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/alarm_relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:onClick="alarmToggle"
        app:srcCompat="@drawable/ic_add_black"
        android:layout_alignRight="@+id/alarm_relativeLayout" />

    <Button
        android:id="@+id/snooze_button"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/oval_shape"
        android:fontFamily="sans-serif"
        android:onClick="alarmSnooze"
        android:text="snooze"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="46dp" />


</RelativeLayout>