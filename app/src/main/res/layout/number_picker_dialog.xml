<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dialog_number_picker_sec"
        android:layout_alignTop="@+id/textView"
        android:text="Sec" />

    <NumberPicker
        android:id="@+id/dialog_number_picker_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="101dp">

    </NumberPicker>

    <NumberPicker
        android:id="@+id/dialog_number_picker_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dialog_number_picker_min"
        android:layout_marginEnd="101dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp">

    </NumberPicker>

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dialog_number_picker_min"
        android:layout_marginTop="225dp"
        android:text="Min" />

</RelativeLayout>